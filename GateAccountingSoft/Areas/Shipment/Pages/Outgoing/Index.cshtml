@page
@model GateAccountingSoft.Areas.Shipment.Pages.Outgoing.IndexModel

@{
    Layout = "_Index";
}

@section Create
{
    <a asp-page="Create">Create New</a>
}



<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.BillNumberSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Items[0].BillNumber)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.CountryIdSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Items[0].Country)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.DeliveryNumberSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Items[0].DeliveryNumber)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.EstimatedArrivalSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Items[0].EstimatedArrivalDate)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.EstimatedReadyDateSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Items[0].EstimatedReadyDate)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.ShipmentReportCreationDateSort"
               asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Items[0].ShipmentReportCreationDate)
            </a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].LandCadastre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].ShippingCompanyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].TransportCompanyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Notes)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItems => item.BillNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.Country)@*muudetud*@
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.DeliveryNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.EstimatedArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.EstimatedReadyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.ShipmentReportCreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.LandCadastre)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.ShippingCompanyId)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.TransportCompanyId)
            </td>
            <td>
                @Html.DisplayFor(modelItems => item.Notes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

